<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="net.certware.argument.caz.presentation.CazModelWizardID"
            name="%_UI_CazModelWizard_label"
            class="net.certware.argument.caz.presentation.CazModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/CazModelFile.gif">
         <description>%_UI_CazModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="net.certware.argument.caz.presentation.CazEditorID"
            name="%_UI_CazEditor_label"
            icon="icons/full/obj16/CazModelFile.gif"
            extensions="caz"
            class="net.certware.argument.caz.presentation.CazEditor"
            contributorClass="net.certware.argument.caz.presentation.CazActionBarContributor">
      </editor>
   </extension>

</plugin>
